<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/calendar_dateHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19/3"
        android:textSize="23dp"/>

    <RelativeLayout
        android:id="@+id/calendar_textLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/gray_button"
        android:layout_toRightOf="@id/calendar_dateHeaderText"
        android:layout_marginLeft="20dp">


        <TextView
            android:id="@+id/calendar_itemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienálový úsměv už brzy na obrazovkach"
            />

        <TextView
            android:id="@+id/calendar_itemDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/6/2014 - 25/7/2014"
            android:layout_below="@id/calendar_itemText"
            />


    </RelativeLayout>

    <View
        android:id="@+id/calendar_separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/calendar_textLayout"
        android:layout_marginTop="5dp"/>



</RelativeLayout><!-- From: file:/Users/amk/Documents/workspace/MGProject/MG/src/main/res/layout/calendar_item_row.xml -->