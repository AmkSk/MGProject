<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_image_height"
        android:layout_alignParentLeft="true"
        android:id="@+id/list_item_image"
        android:scaleType="centerCrop"
        android:visibility="invisible"/>

    <ProgressBar
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_image_height"
        android:layout_alignParentLeft="true"
        android:id="@+id/list_item_progressBar"
        android:scaleType="center"/>

    <RelativeLayout
        android:id="@+id/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_image"
        android:layout_centerVertical="true"
        android:background="@drawable/gray_button">

        <TextView
            android:id="@+id/list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blablablablablablablab"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28.3.2013"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/list_item_text"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/show_more"
        android:gravity="center_vertical"
        android:id="@+id/row_arrow_imageView"
        android:layout_alignRight="@id/list_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:paddingLeft="10dp"/>


</RelativeLayout><!-- From: file:/Users/amk/Documents/workspace/MGProject/MG/src/main/res/layout/list_item_row.xml -->